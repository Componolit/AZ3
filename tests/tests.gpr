with "aunit/lib/gnat/aunit.gpr";
with "../z3.gpr";
with "../z3_switches";

project Tests is
   for Create_Missing_Dirs use "True";
   for Source_Dirs use (".");

   for Main use ("tests.adb");
   for Object_Dir use "../obj";
   for Exec_Dir use "../obj/tests";

   package Compiler is
      for Default_Switches ("Ada") use Z3_Switches.Compiler_Switches;
   end Compiler;

   package Builder is
      for Default_Switches ("Ada") use ("-O0", "-g", "-gnata");
      for Global_Compilation_Switches ("Ada") use ("-O0", "-g", "--coverage", "-fsanitize=address", "-fno-omit-frame-pointer");
   end Builder;

   package Linker is
      for Default_Switches ("Ada") use ("-fsanitize=address", "-static-libasan", "-lgcov", "-lz3");
   end Linker;

   package Binder is
      for Default_Switches ("Ada") use ("-E");
   end Binder;

end Tests;
