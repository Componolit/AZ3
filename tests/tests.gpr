with "aunit";
with "../z3.gpr";
with "../switches";

project Tests is
   for Create_Missing_Dirs use "True";
   for Source_Dirs use (".");

   for Main use ("tests.adb");
   for Object_Dir use "../obj";
   for Exec_Dir use "../obj/tests";

   package Builder is
      for Global_Compilation_Switches ("Ada") use ("--coverage");
      for Default_Switches ("Ada") use Switches.Compiler_Switches & ("-O0");
   end Builder;

   package Linker is
      for Default_Switches ("Ada") use ("-lgcov", "-lz3");
   end Linker;

end Tests;
